<div class="container">
<style>
.hidden {
    display: none;
}
</style>

		<h2 id="username">Username: <username><%= @user.username %></username> </h2>
		<h2 id="bio">Bio: <username><%= @user.bio %></username>
		<button id="changeBio" class="btn btn-primary" name = "changeBio">Change Bio</button> </h2>

		<form id="bioform" action="/changeBio" method="post">
			<textarea id = "bioarea" rows="2" cols="50" name = "bio"><%= @user.bio %></textarea><br/>
			<input id="confirmBio" class = "btn btn-primary" type="submit" value="Submit" />
		</form><br/>

		<h2 id="balance">Balance: $<%= "%.2f" % @user.balance %></h2>

		<h1>Upload Pic to sell</h1>
		<form action="/upload" method="POST" enctype="multipart/form-data">
			  Picture Name: <input type="text" name="title" required><br>
			  Picture description: <input type="text" name="desc" required><br>
			  Picture Price (Round Integer): <input type="text" name="price"><br>
            <input type="file" name="file">
            <input type="submit" value="Upload image">
        </form>




      <p>ID: <uid><%= @user.id %></uid> </p>

</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

<script type="text/javascript">
	$("#bioarea").hide()
	$("#bioform").hide()
	$("#confirmBio").hide()

	$('#changeBio').on('click',function(){
		$("#bioarea").show()
		$("#bioform").show()
		$("#confirmBio").show()
		$("#changeBio").remove()
	})
	
</script>